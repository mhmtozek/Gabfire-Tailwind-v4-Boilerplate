{
  "name": "gabfire-wp-tailwind-starter",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "copy:fonts": "copyfiles -u 1 src/fonts/**/* dist/fonts",
    "dev:sass": "sass src/scss/main.scss src/scss/main.css --watch",
    "dev:tw": "tailwindcss -i src/css/input.css -o dist/css/style.css --watch",
    "dev": "npm run copy:fonts && npm run build:sass && npm-run-all --parallel dev:sass dev:tw",
    "build:sass": "sass src/scss/main.scss src/scss/main.css --no-source-map",
    "build:tw": "tailwindcss -i src/css/input.css -o dist/css/style.css --minify",
    "build": "npm run copy:fonts && npm run build:sass && npm run build:tw"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "copyfiles": "^2.4.1",
    "npm-run-all": "^4.1.5",
    "sass": "^1.97.1",
    "tailwindcss": "^4.1.18"
  }
}